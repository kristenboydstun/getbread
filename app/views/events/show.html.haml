%section.show_event
  .row
    .col-md-6
      %article
        %header
          %h2
            = @event.name
          %h3
            = "Hosted by #{@event.host_name}"
          %h4
            = @event.claims.count
            %span.glyphicon.glyphicon-user
            = @event.items.count
            %span.glyphicon.glyphicon-cutlery
          %br
  .row
    .col-md-6
      %ul.list-unstyled.unclaim_square.droppable.sortable
        - @event.unclaimed_items.each do |item|
          %li
            %span.label.label-primary.draggable{"data-claim_id" => nil, "data-item_id" => item.id}
              = item.name
      %br
      .row
        .col-md-7
          = form_for @item, html: { class: "form-inline", :role => "form" } do |f|
            .form-group
              = f.text_field :name, placeholder: "cheese", class: 'form-control'
              = hidden_field_tag 'event_id', @event.id
            %button.btn.btn-primary{:type => "submit"} +
      %br
      .row
        .col-md-7.col-md-offset-3.item_trash.droppable.hidden
          .glyphicon.glyphicon-trash
    .col-md-6
      %ul.list-unstyled
        - @event.claims.each do |claim|
          %li.row
            %h5.claim_name.col-md-2.col-md-offset-1
              = claim.username
            .claim_square.col-md-3.droppable{"data-claim_id" => claim.id, "data-url" => "/events/#{@event.slug}/claims/#{claim.id}"}
              - claim.items.each do |item|
                %span.label.label-primary.draggable{"data-claim_id" => claim.id, "data-item_id" => item.id, "data-url" => "/events/#{@event.slug}/claims/#{claim.id}"}
                  = item.name
      %br
      .row
        .col-md-10.col-md-offset-1
          = form_for [@event, @claim], html: { class: "form-inline", :role => "form" } do |f|
            .form-group
              = f.text_field :username, placeholder: "Your name", class: 'form-control'
            %button.btn.btn-primary{:type => "submit"} +

:javascript
  $(function(){
      $.fn.editable.defaults.mode = 'inline';
      $('#claimed a').editable({
          ajaxOptions: {
            dataType: 'json',
            type: 'PUT'
        }
      });
  });
