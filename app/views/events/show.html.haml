%section.show_event
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2
            = @event.name
          %h3
            = "Hosted by #{@event.host_name}"
        %table.table
          %thead
            %tr
              %th(width="30%") Name
              %th(width="15%") Items
          %tbody
            - 8.times do
              %tr
                %td
                  Kristen
                %td
                  cheese
