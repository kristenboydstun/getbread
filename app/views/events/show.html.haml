%section.show_event
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2
            = @event.name
          %h3
            = "Hosted by #{@event.host_name}"
        %table.table.table-striped#users
          %thead
            %tr
              %th(width="30%") Name
              %th(width="15%") Items
          %tbody
            - @event.items.each do |item|
              %tr
                %td
                  %a.owner{"data-name" => "owner_name", "data-original-title" => "Enter your name", "data-type" => "text", "data-pk" => item.id, "data-url" => "/events/#{@event.slug}/items/#{item.id}", :href => "#"}
                    = item.owner_name

                %td
                  = item.name
  %hr
  .row
    .col-sm-3.col-sm-offset-1
      = form_for [@event, @item], html: { id: "form-inline", :role => "form" } do |f|
        .form-group
          = f.text_field :owner_name, placeholder: "Martha", class: 'form-control'
        .form-group
          = f.text_field :name, placeholder: "milk", class: 'form-control'
        %button.btn.btn-primary{:type => "submit"} Add

:javascript
  $(function(){
      $('#users a.owner').editable({
          title: 'Enter username',
          ajaxOptions: {
            dataType: 'json',
            type: 'PUT'
        }
      });
  });
