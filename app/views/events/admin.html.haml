%section.show_event
  %h3 Menu-builder coming soon
  %h4 ... but until then:

  %hr
  .row
    .col-md-3.col-md-offset-1
      %ul.list-unstyled.unclaim_square.droppable.sortable
        - @event.items.each do |item|
          %li
            %span.label.label-primary.draggable
              = item.name
    .col-md-4.col-md-offset-1
      = form_for @item, html: { class: "form-inline", :role => "form" } do |f|
        .form-group
          = f.text_field :name, placeholder: "cheese", class: 'form-control'
          = hidden_field_tag 'event_id', @event.id
        %button.btn.btn-primary{:type => "submit"} +
    
      %br
      .item_trash.droppable.hidden
        .glyphicon.glyphicon-trash
